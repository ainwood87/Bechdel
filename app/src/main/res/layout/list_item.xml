<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:id="@+id/posterView"
        android:src="@drawable/unknown"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleView"
        android:text="A Movie"
        android:layout_toRightOf="@+id/posterView"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreView"
        android:text="0"
        android:layout_toLeftOf="@+id/denominator"
        android:layout_centerVertical="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/denominator"
        android:text="/3"
        android:layout_toLeftOf="@+id/scorePic"
        android:layout_centerVertical="true" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/scorePic"
        android:src="@drawable/score0"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>